@model DocumentationViewModel

@{
    ViewData["Title"] = "Order Create";
}

<br />

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" enctype="multipart/form-data" method="post">
            <h2><span class="fa fa-file"></span> Upload new file</h2>
            <hr />
            <div class="form-group">
                <label asp-for="Caption"></label>
                <input asp-for="Caption" class="form-control" />
                <span asp-validation-for="Caption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
                <p>Allowed file extensions: Xlsx, Docx, PPT</p>
            </div>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




