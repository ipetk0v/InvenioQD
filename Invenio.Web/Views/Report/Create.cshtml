@model ReportViewModel

@{
    ViewData["Title"] = "Report Create";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TextReport"></label>
                <textarea asp-for="TextReport" class="form-control" rows="3" placeholder="Enter ..."></textarea>
                <span asp-validation-for="TextReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId"></label>
                <input asp-for="OrderId" value="@ViewBag.OrderId" class="form-control"></input>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




