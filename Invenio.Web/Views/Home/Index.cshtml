@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <br />
    <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-10">
            <div class="col-lg-3">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>About Us</h3>

                        <p>More info about Invenio QD</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-info"></i>
                    </div>
                    <a href="http://invenio-bg.com" target="_blank" class="small-box-footer">Click here <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            @if (User.IsInRole("Customer"))
            {
                @Html.Partial("_IndexForReports");
            }
            else
            {
                @Html.Partial("_IndexForOrder");
            }
            <!-- ./col -->
            <div class="col-lg-3">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>Contacts</h3>

                        <p>Contacts with our customer</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="/home/contact" class="small-box-footer">Click here <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <br />
    <div class="row">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000" style="margin-top:50px">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="http://invenio-bg.com/wp-content/uploads/2016/03/cover1.jpg" alt="ASP.NET" class="img-responsive" style="height:500px;" />
                    <div class="carousel-caption" role="option">
                        <h1>Process Development</h1>
                        <p>
                            •	CYCLE TIME IMPROVEMENT
                            •	PROCESS CAPABILITY CPK INCREASE
                            •	QUICK CHANGEOVER
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="http://invenio-bg.com/wp-content/uploads/2016/03/baner1.jpg" alt="Visual Studio" class="img-responsive" style="height:500px;" />
                    <div class="carousel-caption" role="option">
                        <h1>Supplier Quality Development</h1>
                        <p>
                            •	IN-CLIENT SERVICES
                            •	TRAINING SESSIONS, WORKSHOP PROGRAMS
                            •	100% SORTING AND REWORK
                        </p>
                    </div>
                </div>
                <div class="item">
                    <img src="http://invenio-bg.com/wp-content/uploads/2016/03/baner2.jpg" alt="Package Management" class="img-responsive" style="height:500px;" />
                    <div class="carousel-caption" role="option">
                        <h1>Human Resources Recruiting</h1>
                        <p>
                            •	STAFF OUTSOURCING
                        </p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}
else
{
    Html.RenderPartial("_Login");
}





