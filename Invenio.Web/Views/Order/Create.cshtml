@model OrderViewModel

@{
    ViewData["Title"] = "Order Create";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OderNumber"></label>
                <input asp-for="OderNumber" class="form-control" />
                <span asp-validation-for="OderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountToFinishOrder"></label>
                <input asp-for="CountToFinishOrder" class="form-control" />
                <span asp-validation-for="CountToFinishOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




